{
  "swagger": "2.0",
  "info": {
    "description": "This is the documentation for the backend of Books.",
    "version": "0.1.0",
    "title": "Books Backend",
    "contact": {
      "email": "rbusetti@unibz.it"
    }
  },
  "host": "localhost:7000",
  "basePath": "/v1",
  "tags": [
    {
      "name": "auth",
      "description": "Authentication related endpoints"
    },
    {
      "name": "books",
      "description": "Books related endpoints"
    },
    {
      "name": "currencies",
      "description": "Currencies related endpoints"
    },
    {
      "name": "profile",
      "description": "Profile related endpoints"
    }
  ],
  "paths": {
    "/auth/check": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Checks whether the user exists or not",
        "parameters": [{
          "in": "body",
          "name": "username or email",
          "required": true,
          "schema": {
            "type": "object",
            "properties": {
              "usernameOrEmail": {
                "type": "string"
              }
            }
          }
        }],
        "responses": {
          "302": {
            "description": "Login successful"
          },
          "401": {
            "description": "Login unsuccessful"
          },
          "422": {
            "description": "There are some errors in the request"
          },
          "500": {
            "description": "There was an error in the server or the user has not been found"
          }
        }
      }
    },
    "/auth/signup": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Creates user in the system",
        "parameters": [{
          "in": "body",
          "name": "user",
          "required": true,
          "schema": {
            "$ref": "#/models/User"
          }
        }],
        "responses": {
          "302": {
            "description": "Signup successful"
          },
          "422": {
            "description": "There are some errors in the request"
          },
          "500": {
            "description": "There was an error in the server"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Logs user into the system",
        "parameters": [{
          "in": "body",
          "name": "user",
          "required": true,
          "schema": {
            "$ref": "#/models/BaseUser"
          }
        }],
        "responses": {
          "302": {
            "description": "Login successful"
          },
          "401": {
            "description": "Login unsuccessful"
          },
          "422": {
            "description": "There are some errors in the request"
          },
          "500": {
            "description": "There was an error in the server"
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "ServerError": {
        "description": "An error has occurred in the server"
      },
      "InvalidBodyError": {
        "description": "The body of the request is not valid"
      },
      "InvalidFieldFormatError": {
        "description": "One or more fields are not valid"
      }
    },
    "schemas": {
      "AppError": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "status": {
            "type": "number"
          },
          "detail": {
            "type": "string"
          },
          "instance": {
            "type": "string"
          }
        }
      }
    }
  },
  "models": {
    "BaseUser": {
      "type": "object",
      "required": ["username", "password"],
      "properties": {
        "username": {
          "type": "string",
          "example": "riccardo"
        },
        "password": {
          "type": "string",
          "example": "1234"
        }
      }
    },
    "User": {
      "type": "object",
      "required": ["username", "password", "name", "surname"],
      "properties": {
        "username": {
          "type": "string",
          "example": "riccardo"
        },
        "password": {
          "type": "string",
          "example": "1234"
        },
        "name": {
          "type": "string",
          "example": "Riccardo"
        },
        "surname": {
          "type": "string",
          "example": "Busetti"
        },
        "contactInformation": {
          "type": "object",
          "required": ["phoneNumber", "email"],
          "properties": {
            "phoneNumber": {
              "type": "string",
              "example": "2384492571"
            },
            "email": {
              "type": "string",
              "example": "riccardo@domain.com"
            },
            "telegramUsername": {
              "type": "string",
              "example": "riccardo"
            },
            "facebookUsername": {
              "type": "string",
              "example": "riccardo"
            }
          }
        },
        "profilePicture": {
          "type": "string",
          "example": "riccardo.png"
        }
      }
    }
  }
}
